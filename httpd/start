# Start apache server on directory specified as argument.
# Use current directory by default.

if [ "$1" == "" ]; then SERVER_DIR=`pwd`; else SERVER_DIR=$1; fi
echo "Server location: $SERVER_DIR"

docker run -td  \
-p 8080:80 \
--restart always \
--name http \
-v $SERVER_DIR:/usr/local/apache2/htdocs/ \
httpd:2.4
